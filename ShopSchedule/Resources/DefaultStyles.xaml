<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="LightPurpleGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#C5C2FF" Offset="0.0"/>
        <GradientStop Color="#9391BF" Offset="1.0"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource LightPurpleGradientBrush}" />
        <Setter Property="BorderBrush" Value="#C2DDFF" />
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="80" />
        <Setter Property="Margin" Value="10" />
    </Style>
</ResourceDictionary>